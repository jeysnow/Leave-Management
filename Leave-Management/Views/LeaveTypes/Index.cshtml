@model IEnumerable<Leave_Management.Models.LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>
<hr />
<div class="text-right">
    <p>

        <a asp-action="Create" class="btn btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i>
        </a>
    </p>
</div>
<table id="leaveTypeTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <div class="text-right">
                    <a asp-action="Edit" asp-route-id="@item.LeaveTypeId" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    <a asp-action="Details" asp-route-id="@item.LeaveTypeId" class="btn btn-primary"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.LeaveTypeId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash-o" aria-hidden="true"></i></a>

                </div>
                </td>
        </tr>
}
    </tbody>
</table>
<!-- Arroba section me permiite referenciar os scripts importados no layout (js,jquery, etc.)-->
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#leaveTypeTable').DataTable();
        });
    </script>
 }